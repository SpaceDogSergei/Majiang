shoupai-size($width, $height, $shouli-height, $fulou-height) {
    width:  $width;
    height: $height;
    .shouli {
        if ($height < $shouli-height + $fulou-height / 7 * 10) {
            margin-top: $height - $shouli-height;
            float: left;
        }
        else {
            margin-top: 0px;
            float: none;
        }
        .pai {
            width: ($shouli-height * 5 / 7);
            height: $shouli-height;
            transition: width 0.2s ease-out;
            &.deleted {
                opacity: 0;
                width: 0px;
            }
            &.selected {
                transform: translate(0px, - $shouli-height / 7);
            }
            &.blink {
                animation: blink 0.5s infinite;
            }
        }
        .zimo {
            margin-left:  ($shouli-height * 5 / 7 * 0.1);
            margin-right: ($shouli-height * 5 / 7 * 0.1);
        }
    }
    .fulou {
        if ($height < $shouli-height + $fulou-height / 7 * 10) {
            margin-top: $height - $fulou-height;
            float: right;
        }
        else {
            margin-top: $height - $shouli-height - $fulou-height;
            float: none;
        }
        .rotate {
            width: $fulou-height;
            transform: rotate(270deg) translate(- $fulou-height, 0px);
        }
        .pai {
            width: ($fulou-height * 5 / 7);
            height: $fulou-height;
        }
    }
}

.shoupai {
    display: table;
    .shouli {
        line-height: 0px;
    }
    .fulou {
        line-height: 0px;
        .mianzi {
            white-space: nowrap;
            margin-left: 2px;
            float: right;
            .rotate {
                display: inline-block;
                white-space: nowrap;
                text-align: left;
                transform-origin: 0% 0%;
            }
        }
    }
}

he-size($width, $dapai-height, $mode = block) {
    width:  $width;
    if ($mode == line) {
        height: ($dapai-height * (2 + 7) / 7);
    }
    else {
        height: ($dapai-height * (2 + 7 * 3) / 7);
    }
    div.dapai {
        if ($mode == line) {
            height: $dapai-height;
        }
        else {
            height: $dapai-height * 3;
        }
        .pai {
            width: ($dapai-height * 5 / 7);
            height: $dapai-height;
        }
        .break {
            if ($mode == line) {
                display: inline-block;
                width: ($dapai-height * 5 / 7 * 0.1);
            }
            else {
                display: block;
            }
        }
    }
}

.he {
    div.dapai {
        line-height: 0px;
        .pai {
            &.mopai {
                opacity: 0.8;
            }
            &.dapai {
                transform: translate(4px, 2px);
            }
            &.dapai.mopai {
                opacity: 0.6;
            }
        }
    }
}

pai-size($pai-height) {
    .pai {
        width: ($pai-height * 5 / 7);
        height: $pai-height;
    }
}

