@keyframes paiSelected {
    0% {
        background-color: #fff;
    }
    50% {
        background-color: #cacaca;
    }
}

.previewButton,
.saveButton,
.loadButton {
  float: right;
}

.paiTable {
  border-collapse: collapse;
  line-height: 1;
}

.paiTable__sayLine {
  display: flex;
  height: 12px;
}

.clickSay {
  display: inline-block;
  width: 36px;
  text-align: center;
  font-size: 12px;
  line-height: 1;
}

.clickPai {
  box-sizing: border-box;
  border: solid 1px;
}

.clickPai--blank {
  background-color: #f5f5f5;
}

.selected {
  animation: paiSelected 1s infinite;
}
