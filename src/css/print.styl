@media print {

    body.game {
        color:      black;
        background: white;
        a {
            color:  black;
        }
    }
    #navi {
        display: none;
    }
    #game {
        background: white;
        .kaiju {
            border: solid 1px #666;
            background: white;
            .player > div {
                border: solid 1px #666;
                background: white;
            }
        }
        > .player {
            border: solid 1px #ccc;
            background: white;
        }
        .chang {
            background: white;
            border: solid 1px #666;
            .defen span.lunban {
                color: blue;
                text-decoration: underline;
            }
        }
        .he {
            div.dapai .pai.mopai {
                opacity: 1;
                border-top: solid 2px blue;
            }
        }
        .say {
            color: #666;
            text-shadow: none;
        }
        .controler {
            display: none;
        }
        .huledialog > div > div {
            border: solid 1px #666;
            border-radius: 4px;
            background: white;
            .fenpei {
                .plus {
                    color: blue;
                }
            }
        }
        > .summary > div > div {
            border: solid 1px #666;
            background: white;
            table {
                border-color: #666;
                .zhuangjia {
                    background: #eee;
                }
                .hule
                .guanjun
                .plus {
                    color: blue;
                }
            }
        }
    }
}
